<h2><%=@range %>s search for "<%=@word %>"</h2>
<div class="col-xs-9">
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <% if @range != "User" %>
        <th>title</th>
        <% else%>
        <th>name</th>
        <% end %>
        <th>option</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
       <tr>
         <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
          <td><%= link_to user.name, user_path(user), class: "user_#{user.id}" %></td>
          <td><%= user.introduction %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
          <td><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
